<div class="header flex gap-8 border-2 border-teal-800">
	<wa-tooltip for="box">I'm animated !</wa-tooltip>
	<wa-tooltip for="box3">I'm animated too !</wa-tooltip>
	<div id="box" class="box w-10 h-10 bg-teal-600 rounded-md"></div>

	<div class="flex gap-8">
		<div class="box2 w-10 h-10 bg-pink-300 rounded-md"></div>
		<div class="box2 w-10 h-10 bg-pink-500 rounded-md"></div>
		<div class="box2 w-10 h-10 bg-pink-700 rounded-md"></div>
		<div class="box2 w-10 h-10 bg-pink-900 rounded-md"></div>
	</div>

	<div id="box3" class="box3 w-10 h-10 bg-orange-400 rounded-md"></div>
</div>

<script>
	import { animate, stagger } from "motion";
	import gsap from "gsap";

	animate(
		".box",
		{ rotate: 90 },
		{
			type: "spring",
			stiffness: 100,
			repeat: Infinity,
			repeatDelay: 0.2,
		},
	);

	animate(
		".box2",
		{ scale: 0.9, y: [50, 0] },
		{
			delay: stagger(0.1),
		},
	);

	gsap.to(".box3", {
		rotate: 360,
		duration: 1,
		repeat: -1,
		repeatDelay: 0.2,
	});
</script>
