<style>
	circle {
		transition:
			r 400ms,
			cy 600ms;
	}
	div:hover circle {
		r: 50px;
		cy: 100px;
	}
</style>

<script>
	import { animate, stagger } from "motion";
	import gsap from "gsap";
	import { DrawSVGPlugin } from "gsap/DrawSVGPlugin";

	gsap.registerPlugin(DrawSVGPlugin);

	animate(
		".box",
		{ rotate: 90 },
		{
			type: "spring",
			stiffness: 100,
			repeat: Infinity,
			repeatDelay: 0.2,
		},
	);

	animate(
		".box2",
		{ scale: 0.9, y: [50, 0] },
		{
			delay: stagger(0.1),
		},
	);

	gsap.to(".box3", {
		rotate: 360,
		duration: 1,
		repeat: -1,
		repeatDelay: 0.2,
	});

	const tl = gsap
		.timeline({
			repeat: 0,
			defaults: { duration: 3, ease: "power1.inOut" },
		})
		.set("svg", { opacity: 1 })
		.from("line", { drawSVG: "0% 0%" });

	const t2 = gsap
		.timeline({
			repeat: 0,
			defaults: { duration: 3, ease: "power1.inOut" },
		})
		.set("svg", { opacity: 1 })
		.from("rect", { drawSVG: "0% 0%" });
</script>
